@using BusinessLogic.Constants.Role
@using BusinessLogic.Enums
@using BusinessLogic.Dtos.Role
@model List<BusinessLogic.Dtos.Role.RoleResponse>
@section Scripts {
    <script src="~/admin-app/controllers/user/index.js" asp-append-version="true"></script>
    <script>
        var userObj = new UserController();
        userObj.initialize();
    </script>
}
<div id="modal-add-edit" class="modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="formAddUser">
                    <div class="tab-content">
                        <div class="tab-pane active show" id="english">
                            <div class="form-group col-sm-12">
                                <input type="hidden" id="hidId" value="0" />
                                <label for="txtTitle" class="control-label no-padding-right">Vai trò <span class="text-danger">*</span></label>
                                <select class="custom-select" id="ddlRoleName" name="ddlRoleName">
                                    <option value="">Chọn vai trò</option>
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label for="fullName" class="col-sm-auto control-label no-padding-right">Tên đầy đủ <span class="text-danger">*</span></label>
                                        <div class="col-sm-12">
                                            <input type="text" class="form-control" id="fullName" name="fullName">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <label for="email" class="col-sm-auto control-label no-padding-right">Email/Tên đăng nhập <span class="text-danger">*</span></label>
                                        <div class="col-sm-12">
                                            <input type="text" class="form-control" id="email" name="email">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row removePass">
                                    <div class="col-sm-6">
                                        <label for="password" class="col-sm-auto control-label no-padding-right">Mật khẩu <span class="text-danger">*</span></label>
                                        <div class="col-sm-12">
                                            <input type="text" class="form-control" id="password" name="password">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <label for="confirmPassword" class="col-sm-auto control-label no-padding-right">Nhập lại mật khẩu <span class="text-danger">*</span></label>
                                        <div class="col-sm-12">
                                            <input type="text" class="form-control" id="confirmPassword" name="confirmPassword">
                                            <span id="passwordMessage"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label for="phoneNumber" class="col-sm-auto control-label no-padding-right">Số điện thoại </label>
                                        <div class="col-sm-12">
                                            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="dateOfBirth" class="col-sm-auto control-label no-padding-right">Ngày sinh </label>
                                            <div class="col-sm-12">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="dateOfBirth" name="dateOfBirth" placeholder="dd/mm/yyyy ">
                                                    <div class="input-group-append">
                                                        <span class="input-group-text" id="openDatePicker"><i class="far fa-calendar-alt"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="address" class="col-sm-auto control-label no-padding-right">Địa chỉ </label>
                                <div class="col-sm-12">
                                    <textarea type="text" class="form-control" id="address" name="address"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtImage" class="col-sm-2 control-label no-padding-right">Hình ảnh </label>
                            <div class="d-flex">
                                <div class="col-sm-10" style="display:none">
                                    <input type="text" class="form-control" id="txtImageShow" disabled />
                                    <input type="text" class="form-control" id="txtImage" name="txtImage" hidden />
                                    <input type="file" id="fileInputImage" style="display:none" />
                                </div>
                                <div class="col-sm-2">
                                    <img id="imagePreview" src="~/assets/images/user.png" alt="Preview" style="max-width: 100px; max-height: 100px;" />
                                </div>
                            </div>
                            <div class="col-sm-2 mt-1">
                                <input type="button" style="width:100px" id="btnSelectImg" class="btn btn-primary" value="Chọn ảnh" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox pl-4">
                                <input type="checkbox" class="custom-control-input" checked="checked" id="ckStatus" name="ckStatus">
                                <label class="custom-control-label" for="ckStatus">Kích hoạt</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSave" class="btn btn-success">Lưu</button>
                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger">Hủy bỏ</button>
            </div>
        </div>
    </div>
</div>