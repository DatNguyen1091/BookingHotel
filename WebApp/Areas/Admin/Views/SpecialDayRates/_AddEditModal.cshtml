<div id="modal-add-edit" class="modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="formMaintainance">
                    <div class="tab-content">
                        <div class="form-group">
                            <input type="hidden" id="hidId" value="0" />
                            <label for="txtTitle" class="col-sm-auto control-label no-padding-right">Tiêu đề <span class="text-danger">*</span></label>
                            <div class="col-sm-12">
                                <input type="text" class="form-control" id="txtTitle" name="txtTitle" placeholder="Tiêu đề">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtPercentDiscount" class="col-sm-auto control-label no-padding-right">Giảm giá (%)</label>
                            <div class="col-sm-12">
                                <input type="text" class="form-control" id="txtPercentDiscount" name="txtPercentDiscount" placeholder="Giảm giá">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="txtSinceDay" class="col-sm-auto control-label no-padding-right">Từ ngày <span class="text-danger">*</span></label>
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="txtSinceDay" name="txtSinceDay" placeholder="dd/mm/yyyy ">
                                            <div class="input-group-append">
                                                <span class="input-group-text" id="openDatePicker1"><i class="far fa-calendar-alt"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="txtToDay" class="col-sm-auto control-label no-padding-right">Đến ngày <span class="text-danger">*</span></label>
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="txtToDay" name="txtToDay" placeholder="dd/mm/yyyy ">
                                            <div class="input-group-append">
                                                <span class="input-group-text" id="openDatePicker2"><i class="far fa-calendar-alt"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="txtDescription" class="col-sm-auto control-label no-padding-right">Mô tả </label>
                            <div class="col-sm-12">
                                <textarea type="text" class="form-control" id="txtDescription" name="txtDescription" placeholder="Trả lời"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSave" class="btn btn-success">Lưu</button>
                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger">Hủy bỏ</button>
            </div>
        </div>
    </div>
</div>